<% provide(:title, "ログイン") %>
<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span>自動的にログイン</span>
  <% end %>

  <%= f.submit "ログイン" %>
  <% end %>

<p><%= link_to "アカウント登録はこちら", new_user_path %></p>
